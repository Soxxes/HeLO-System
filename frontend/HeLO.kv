<MainWidget>:
    GridLayout:
        cols: 1
        size: root.width, root.height

        Label:
            text: "Welcome to the HeLO-System!"
            size_hint: 0.1, 0.2
            pos_hint: {"center_x": 0.5}

        GridLayout:
            cols: 2
            Label:
                text: "Name of Team 1:"
            TextInput:
                id: name_team_one
                multiline: False
            Label:
                text: "Name of Team 2:"
            TextInput:
                id: name_team_two
                multiline: False
            Label:
                text: "Authentication code:"
            TextInput:
                id: auth
                multiline: False
                password: True
                password_mask: "*"
                #padding: [6, 6, 6, 6]
            Label:
                text: "Score:"
            TextInput:
                id: game_score
                multiline: False
                text: "e.g. '4-1'"
        
        # Buttons
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: "vertical"
                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "bottom"
                    Button:
                    # (Requires Authentication)
                        text: "Calc & Send"
                        size_hint: 0.3, 0.3
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_press: root.calc_and_send(name_team_one.text, name_team_two.text, auth.text, game_score.text)
                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    Button:
                        text: "Get HeLO Score"
                        size_hint: 0.3, 0.3
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_press: root.set_scores_label(name_team_one.text, name_team_two.text)

            # Labels for the (new) score
            GridLayout:
                cols: 2
                Label:
                    text: "(New) HeLO Score Team 1:"
                Label:
                    text: root.helo_score_team1
                Label:
                    text: "(New) HeLO Score Team 2:"
                Label:
                    text: root.helo_score_team2
        
