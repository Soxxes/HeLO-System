<SuperUserWindow>:
    GridLayout:
        cols: 1
        size: root.width, root.height

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Back"
                on_press: root.switch_to_main("Main")
            Label:
                text: "SuperUser Login"
                #size_hint: 0.1, 0.2
                pos_hint: {"center_x": 0.5}

        # Login for Superuser
        GridLayout:
            cols: 2
            Label:
                text: "Username"
            TextInput:
                id: username
            Label:
                text: "Password"
            TextInput:
                id: password
        
        BoxLayout:
            Button:
                text: "Submit"
                on_press: root.submit(username.text, password.text)

        # CheckSum
        GridLayout:
            cols: 2
            Button:
                text: "Get CheckSum"
                on_press: root.get_checksum(check_sum_label, app.auth)
            Label:
                id: check_sum_label
                text: ""


<MainWidget>:
    GridLayout:
        cols: 1
        size: root.width, root.height

        Label:
            text: "Welcome to the HeLO-System!"
            size_hint: 0.1, 0.2
            pos_hint: {"center_x": 0.5}

        BoxLayout:
            orientation: "horizontal"
            # Switch:
            #     id: superuser_switch
            #     on_active: root.on_switch_active(self)
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "current user:"
                Label:
                    id: current_user
                    text: app.username
            Button:
                text: "Switch to Superuser Page"
                on_press: root.switch_to_superuser_page("Superuser", auth.text)

        GridLayout:
            cols: 2
            Label:
                text: "Name of Team 1:"
            TextInput:
                id: name_team_one
                multiline: False
            Label:
                text: "Name of Team 2:"
            TextInput:
                id: name_team_two
                multiline: False
            Label:
                text: "Authentication code:"
            TextInput:
                id: auth
                multiline: False
                password: True
                password_mask: "*"
                #padding: [6, 6, 6, 6]
                #disabled: root.superuser_disabled
            Label:
                text: "Score:"
            TextInput:
                id: game_score
                multiline: False
                text: "e.g. '4-1'"
        
        # Buttons
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: "vertical"
                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "bottom"
                    Button:
                    # (Requires Authentication)
                        text: "Calc & Send"
                        size_hint: 0.3, 0.3
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_press: root.calc_and_send(name_team_one.text, name_team_two.text, auth.text, game_score.text)
                        #disabled: root.superuser_disabled
                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    Button:
                        text: "Get HeLO Score"
                        size_hint: 0.3, 0.3
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_press: root.set_scores_label(name_team_one.text, name_team_two.text)

            # Labels for the (new) score
            GridLayout:
                cols: 2
                Label:
                    text: "(New) HeLO Score Team 1:"
                Label:
                    text: root.helo_score_team1
                Label:
                    text: "(New) HeLO Score Team 2:"
                Label:
                    text: root.helo_score_team2
        
